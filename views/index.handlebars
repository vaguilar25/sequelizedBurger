<form class="create-form card p-2" style="width: 34rem;">
    <div class="form-group">

        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="name" class="form-control" placeholder="New Burger">
    </div>
    <div class="input-group-append">
        <button type="submit" class="btn btn-secondary">Add burger</button>
    </div>


</form>



<div class="row">
    <div class="col-md-6 order-md-1 mt-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your Order</span>

        </h4>
        <ul class="list-group mb-3">
            {{#each burger}}
            {{#unless devoured}}
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">
                        {{burger_name}}</h6>
                </div>
                <span class="text-muted">
                    <button class="devour" data-id="{{id}}">
                        Devour It!
                    </button>
                </span>

            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>


    <div class="col-md-6 order-md-2 mt-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Devoured</span>

        </h4>
        <ul class="list-group mb-3">
            {{#each burger}}
            {{#if devoured}}
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">
                        {{burger_name}}</h6>
                </div>
                <span class="text-muted">
                    <button class="delete" data-id="{{id}}">
                        Delete
                    </button>
                </span>

            </li>
            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>