<h3 class="text-center ">Enter your new Customers
</h3><br>
<a href="/">Go to Orders</a>
<form class="customer-form card p-2 " style="width: 34rem;">
    <div class="form-group ">
        <label for="inputCustomer"><b>Customer Name:</b></label>
        <input type="text" class="form-control" id="inputCustomer" placeholder="Add new Customer">

    </div>

    <button type="submit" class="btn btn-primary" style="width: 8rem;">Submit</button>
</form>

<div class="row">
    <div class="col-md-6 order-md-1 mt-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Customers</span>

        </h4>
        <ul class="list-group mb-3">
            {{#each customer}}

            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div class="customerContainer">
                    <h6 class="my-0">
                        #{{id}} - {{name}} - {{error}}</h6>
                  
                </div>
                <span class="text-muted">
                    <button class="deleteCustomer" data-id="{{id}}">
                        Delete

                    </button>


                </span>
            
                {{#if error}}
                <div class="alert alert-danger">{{error}} error</div>
                {{/if}}
               
            </li>

            {{/each}}
        </ul>

    </div>

</div>