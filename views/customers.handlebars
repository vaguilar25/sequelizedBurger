<h3 class="text-center">Enter your Customers
</h3>
<form class="customer-form">
    <div class="form-group">
        <label for="inputCustomer">Customer Name</label>
        <input type="text" class="form-control" id="inputCustomer" placeholder="Add new Customer">

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="row">
    <div class="col-md-6 order-md-1 mt-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Customers</span>

        </h4>
        <ul class="list-group mb-3">
            {{#each customer}}

            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">
                        {{name}}</h6>
                </div>
                <span class="text-muted">
                    <button class="deleteCustomer" data-id="{{id}}">
                        Delete
                    </button>
                </span>

            </li>

            {{/each}}
        </ul>

    </div>

</div>